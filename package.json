{
  "name": "frontend-framework",
  "version": "0.1.0",
  "description": "Rapid prototyping framework by POD Point",
  "author": "Mike Francis <mike.francis@pod-point.com>",
  "license": "Apache-2.0",
  "scripts": {
    "css-sass": "node-sass src/scss -o build/css",
    "css-autoprefix": "postcss --use autoprefixer --autoprefixer.browsers '> 5%' -o build/css/style.css build/css/style.css",
    "css-minify": "cssnano --sourcemap build/css/style.css build/css/style.css",
    "compile-css": "npm run css-sass && npm run css-autoprefix",
    "watch-css": "fsmonitor -p -d src/scss npm run compile-css",
    "build-css": "npm run compile-css && npm run css-minify",
    "js-bundle": "webpack ./src/js/script.js build/js/script.js",
    "js-uglify": "uglifyjs build/js/script.js -o build/js/script.js",
    "watch-js": "fsmonitor -p -d src/js npm run js-bundle",
    "build-js": "npm run js-uglify",
    "watch": "npm run watch-js & npm run watch-css",
    "build": "npm run build-js && npm run build-css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.6",
    "jquery": "^2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "cssnano-cli": "^1.0.3",
    "fsmonitor": "^0.2.4",
    "livereload": "^0.4.1",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.4.1",
    "uglify-js": "^2.6.1",
    "webpack": "^1.12.12"
  }
}
